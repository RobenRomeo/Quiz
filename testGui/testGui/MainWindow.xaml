<Window x:Class="QuizApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz" Height="450" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Quiz question display -->
        <TextBlock x:Name="txtQuestion" Grid.Row="0" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>

        <!-- Answer choices -->
        <StackPanel x:Name="stackPanelChoices" Grid.Row="1" Margin="0,20,0,0">
            <RadioButton x:Name="rbChoiceA" Content="Choice A" FontSize="16"/>
            <RadioButton x:Name="rbChoiceB" Content="Choice B" FontSize="16"/>
            <RadioButton x:Name="rbChoiceC" Content="Choice C" FontSize="16"/>
        </StackPanel>

        <!-- Submit button -->
        <Button x:Name="btnSubmit" Grid.Row="1" Margin="0,20,0,270" Padding="10" Content="Submit" Click="btnSubmit_Click" HorizontalAlignment="Center"/>
    </Grid>
</Window>

